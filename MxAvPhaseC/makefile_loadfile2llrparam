# Makefile to run test for function loadfile2llrparams_real
# Yiqian-Qian 2022/09/19

OBJ = gslhdf5_io.o LLR_Mp_Av.o test_loadfile2llrparamsreal.o 

CC = gcc -o0 -g # -o0 turn off optimization, -g enable debugging

CXXFLAGS = /opt/local/include
CXXLIBS = /opt/local/lib

test_loadfile2llrparamsreal: $(OBJ)
	$(CC) $(OBJ) -L$(CXXLIBS) -I$(CXXFLAGS) -lhdf5 -lhdf5_hl -lgsl -lgslcblas -lz -lm -o TESTH5IO/test_loadfile2llrparamsreal

gslhdf5_io.o: gslhdf5_io.c
	gcc -c -I$(CXXFLAGS) gslhdf5_io.c

LLR_Mp_Av.o: LLR_Mp_Av.c	
	gcc -c -I$(CXXFLAGS) LLR_Mp_Av.c	

test_loadfile2llrparamsreal.o: test_loadfile2llrparamsreal.c	
	gcc -c -I$(CXXFLAGS) test_loadfile2llrparamsreal.c	

.PHONY:clean
clean:
	rm -f *.o	
	echo Done!
